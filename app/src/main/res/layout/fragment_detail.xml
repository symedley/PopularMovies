<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout _width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/abc_text_size_small_material"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:elegantTextHeight="true"
                android:password="false"
                android:text="Movie title"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textSize="@dimen/design_tab_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/original_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Original title"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textSize="@dimen/design_tab_text_size_2line" />

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/synopsisLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:text="Synopsis:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/synopsis"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/abc_text_size_small_material"
                android:layout_marginRight="@dimen/abc_text_size_small_material"
                android:text="Synopsis"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textSize="@dimen/design_tab_text_size_2line" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/abc_text_size_small_material"
                android:text="Rating"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textSize="@dimen/design_tab_text_size_2line" />

            <TextView
                android:id="@+id/release_date"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/abc_text_size_small_material"
                android:text="Release date"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textSize="@dimen/design_tab_text_size_2line" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>