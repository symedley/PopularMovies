<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:id="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false">

            <TextView
                android:id="@+id/title"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_title"
                android:layout_gravity="start"
                android:elegantTextHeight="true"
                android:textStyle="bold"
                android:textSize="@dimen/design_tab_text_size"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:layout_marginBottom="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/original_title"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/original_title"
                android:textSize="@dimen/design_tab_text_size_2line" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/synopsis_colon"
                android:id="@+id/synopsisLabel"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/synopsis"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/synopsis"
                android:textSize="@dimen/design_tab_text_size_2line"
                android:layout_marginBottom="@dimen/abc_text_size_small_material"
                android:layout_marginRight="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/rating"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="@dimen/design_tab_text_size_2line"
                android:layout_marginBottom="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/release_date"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Release date"
                android:textSize="@dimen/design_tab_text_size_2line"
                android:layout_below="@+id/movie_poster" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="200dp"
        android:minWidth="100dp">
        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="Movie poster" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/favorite"
                android:text="@string/favorite_questionMark"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/movie_item_btn_fav_descr"
                android:id="@+id/toggleFavoriteBtn"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/selector"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

